

<h1>Listing students</h1>

<table>
  <tr>
    <th>Student Name</th>
    <th>Date of Birth</th>
    <th>GPA</th>
    <th>Start date</th>
    <th>Awards</th>
    <th>Courses</th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td class="name">
      <%= student.given_name %>
      <%= student.middle_name %>
      <%= student.family_name %>
    </td>
    <td><%= student.date_of_birth %></td>
    <td><%= student.grade_point_average %></td>
    <td><%= student.start_date %></td>
    <td><%= student.awards.count %></td>
    <td><%= student.courses.count %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Awards', student_awards_path(student) %></td>
    <% if current_user.admin? %>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, confirm: 'Are you sure?', :class =>'destroy' %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user.admin? %>
<%= link_to 'New Student', new_student_path %>
<% end %>
